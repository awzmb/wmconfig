#!/bin/sh

# basic stuff
alias l='eza --icons -lh'
alias ll='eza --icons -lAh'
alias ls='eza --icons -F'

# neomutt + maildir sync
alias mutt='mbsync -a && neomutt'

# git aliases
alias ga='git add --all'
alias gc='git checkout'
alias gcm='git commit -m'
alias gl='git log'
alias gs='git show'
alias gd='git diff'
alias gdc='git diff --cached'
alias gpl='git pull'
alias gps='git push'
alias gct='git shortlog -s -n --all --no-merges'

# kubectl
alias k='kubectl'

# fzf find aliases
alias fcd='cd $(find . -type d 2>&1 | grep -v "Permission denied" | fzf)'

# get temperature
alias temps="paste <(cat /sys/class/thermal/thermal_zone*/type) <(cat /sys/class/thermal/thermal_zone*/temp) | column -s $'\t' -t | sed 's/\(.\)..$/.\1Â°C/'"

# python pip upgrades
alias pip-upgrade='python3 -m pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U'

alias notes='cd ~/notes && nvim ~/notes'

# docker aliases
alias docker='podman'
alias ai='docker run --rm -it localhost/terminal-ai:latest'
alias aichat='docker run --rm -v ${HOME}/.config/aichat:/root/.config/aichat -it localhost/aichat:latest'
alias dive="docker run -ti --rm  -v /var/run/docker.sock:/var/run/docker.sock docker.io/wagoodman/dive"
alias ggcloud="docker run --rm -ti -v $HOME/.config/gcloud:/root/.config/gcloud gcr.io/google.com/cloudsdktool/google-cloud-cli:latest gcloud"
#alias k9s='docker run --rm -v ${HOME}/.config/k9s:/root/.config/k9s -v ${HOME}/.kube:/root/.kube:ro -v ${HOME}/.config/gcloud:/root/.config/gcloud:ro -it localhost/k9s:latest'
#alias k9s='docker run --rm -v ${HOME}/.config/k9s:/root/.config/k9s -v ${HOME}/.kube/config:/root/.kube/config -v ${HOME}/.config/gcloud:/root/.config/gcloud --env=KUBECONFIG=/root/.kube/config --env=TERM=$(echo ${TERM}) -it localhost/gcloud-k9s:latest k9s --headless'
